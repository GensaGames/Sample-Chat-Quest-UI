<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/main_padding">

        <ImageView
            android:id="@+id/contact_photo"
            android:layout_width="@dimen/main_photo_size"
            android:layout_height="@dimen/main_photo_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_micro"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_time_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_padding_frame"
                android:layout_marginRight="@dimen/main_padding_frame"
                android:text="2 hours ago"
                android:textColor="@color/textMessageTime" />


            <FrameLayout
                android:id="@+id/linear_bubble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bubble_image_left" />

                <TextView

                    android:id="@+id/text_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/main_padding_frame"
                    android:text="Sample Text"
                    android:textColor="@color/textMessage" />

            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/contact_my_photo"
            android:layout_width="@dimen/main_photo_size"
            android:layout_height="@dimen/main_photo_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_micro"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>